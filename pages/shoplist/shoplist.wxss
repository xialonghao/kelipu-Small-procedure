.more {
  font-size: 20rpx;
  color: #999;
  height: 82rpx;
  line-height: 82rpx;
  text-align: center;
  border-top: 1px solid #f4f4f4;
  letter-spacing: 1rpx;
}




/* 某二级分类下无商品的提示样式 */
.no_shoplist{
  text-align: center;
  position: absolute;
  width: 400rpx;
  height: 400rpx;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  font-size: 0;
}
.no_shoplist image{
  width: 100rpx;
  height: 100rpx;
}
.no_shoplist .fr{
  font-size: 26rpx;
  color: #252525;
  display: block;
  text-align: center;
  margin-top: 30rpx;
}


/* "已经到底啦~"的样式 */
.nomore {
color: #999;
font-size: 26rpx;
line-height: 82rpx;
height: 82rpx;
text-align: center;
background: #fff;
}

