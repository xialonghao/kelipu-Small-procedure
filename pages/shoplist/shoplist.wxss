/* pages/shoplist/shoplist.wxss */
@import "../public/gobal.wxss";
@import "../index/index.wxss";

/* 暂无搜索结果 */
.noshop_list{
  position: absolute;
  width: 400rpx;
  height: 400rpx;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
  margin: auto;
  font-size: 0;
}
.noshop_list image{
  width: 104rpx;
  height: 106rpx;
}
.noshop_list text{
  font-size: 26rpx;
  color: #252525;
  display: block;
  text-align: center;
  margin-top: 30rpx;
}
/* 暂无搜索结果 */


.shop_btit {
  text-align: left;
  word-break:break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}


.shoplist {
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  padding: 0 80rpx;
  border-top: 1px solid #f4f4f4;
  border-bottom: 1px solid #f4f4f4;
}

.shoplist view {
  font-size: 28rpx;
  color: #252525;
  height: 80rpx;
  line-height: 80rpx;
  width: 33.33%;
  text-align: center;
  letter-spacing: 1rpx;
}

