/**index.wxss**/
@import "../public/gobal.wxss";
page{
  margin-top: 0!important;
}
.shopserch {
  margin: 0 30rpx;
  margin-bottom: 20rpx;
  background: #f4f4f4 url(http://giftcardapp.colipu.com/static/module/admin/img/search_img.png) no-repeat 20rpx center;
  background-size: 31rpx 31rpx;
  border-radius: 5rpx;
}

.shopserch input {
  font-size: 24rpx;
  padding: 15rpx 68rpx;
  height: 64rpx;
  box-sizing: border-box;
  color: #666;
}

swiper {
  width: 750rpx;
  height: 400rpx;
}

swiper image {
  width: 750rpx;
  height: 400rpx;
}

.wrap {
  position: relative;
}

/*用来包裹所有的小圆点  */

.dots {
  width: 100%;
  display: block;
  text-align: center;
  position: absolute;
  bottom: 29rpx;
  line-height: 0;
}

/*未选中时的小圆点样式 */

.dot {
  width: 12rpx;
  height: 12rpx;
  display: inline-block;
  z-index: 11;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  margin: 0 7rpx;
}

.dot.active {
  background: rgba(255, 255, 255, 1);
}

/*选中以后的小圆点样式  */

.swiper {
  font-size: 0;
}

.index_nav {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-start;
  margin-top: 33rpx;
  padding-bottom: 5rpx;
  border-bottom: 20rpx solid #f4f4f4;
  padding: 0 15rpx;
}

.index_nav .index_navbox {
  display: block;
  width: 20%;
  text-align: center;
  margin-bottom: 35rpx;
}

.index_nav .index_navbox image {
  width: 90rpx;
  height: 90rpx;
  display: block;
  margin: 0 auto;
}

.index_nav .index_navbox text {
  word-break:break-all;
  display: block;
  font-size: 24rpx;
  color: #252525;
  margin-top: 12rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  line-height: 36rpx;
  padding: 0 5rpx;
}

.index_tit {
  padding: 0 30rpx;
  border-bottom: 1px solid #f4f4f4;
}

.index_tit::after {
  content: '';
  display: block;
  clear: both;
}

.index_tit text {
  float: left;
  font-size: 28rpx;
  color: #212112;
  letter-spacing: 4rpx;
  height: 86rpx;
  font-weight: 400;
  line-height: 86rpx;
}

.index_tit navigator {
  float: right;
  line-height: 86rpx;
  height: 86rpx;
  font-size: 20rpx;
  color: #252525;
}

.index_shopbox {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.index_shopbox .shop_wbox {
  display: block;
  width: 50%;
  height: 400rpx;
  position: relative;
  border-bottom: 1px solid #f4f4f4;
  box-sizing: border-box;
  padding-bottom: 35rpx;
}

.index_shopbox .shop_wbox:nth-child(odd) {
  border-right: 1px solid #f4f4f4;
}

.index_shopbox .shop_wbox .shop_image {
  width: 100%;
  text-align: center;
  height: 240rpx;
  display: flex;
  /* align-items: center; */
  justify-content: center;
  font-size: 0;
}

.index_shopbox .shop_wbox .shop_image image {
  width: 200rpx;
  max-height: 100%;
}

.index_shopbox .shop_wbox .shop_btit {
  color: #252525;
  display: block;
  font-size: 26rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-bottom: 25rpx;
  line-height: 40rpx;
  text-align: left;
  word-break:break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.index_shopbox .shop_wbox .shop_num {
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #d71635;
  font-weight: bold;
  position: absolute;
  bottom: 30rpx;
}

.index_shopbox .shop_wbox .shop_num text {
  font-size: 20rpx;
  color: #d71635;
  /* display: inline-block; */
  vertical-align: bottom;
  margin-left: 8rpx;
  height: 30rpx;
  line-height: 33rpx;
  font-weight: normal;
}

.footer {
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  padding: 0 10rpx;
  position: fixed;
  bottom: 0;
  max-width: 750rpx;
  left: 0;
  right: 0;
  margin: auto;
  background: #fff;
}

.footer navigator {
  width: 25%;
  display: block;
  text-align: center;
  padding-top: 18rpx;
}

.footer navigator text {
  font-size: 22rpx;
  color: #a1a6ab;
  display: block;
  margin-top: 15rpx;
  padding-bottom: 20rpx;
}

/* "点击查看更多商品>>"样式 */
.seeMore{
font-size: 26rpx;
text-align: center;
/* text-align: right; */
padding: 35rpx 0;
color: #999;
}


/* "更多>>"样式 */
.clickMore{
font-size: 26rpx;
/* text-align: center; */
text-align: right;
padding: 35rpx 0;
color: #333;
}