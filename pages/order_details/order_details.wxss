/* pages/order_details/order_details.wxss */
@import "../public/gobal.wxss";

.order-details-piece1 {
  padding: 36rpx 30rpx 0;
  border-top: 15rpx solid #f4f4f4;
  border-bottom: 15rpx solid #f4f4f4;
}

.order-details-piece1 view {
  font-size: 0;
}
.order-details-piece1 view::after{
  content: '';
  display: block;
  clear: both;
}

.order-details-piece1 view text {
  font-size: 26rpx;
  line-height: 34rpx;
  display: block;
  color: #666;
  float: left;
}
.order-details-piece1 .order-details-query text{
  float: none;
  display: inline-block;
  vertical-align: middle;
  line-height: 34rpx;
}
.order-details-piece1 .order-details-query .two{
  width: 300rpx;
  line-height: 34rpx;
}
.order-details-time.mess .two{
  width: 520rpx;
  line-height: 34rpx;
}
.order-details-piece1 .order-details-state .two,
.order-details-piece1 .order-details-query .two {
  color: #d70029;
}

.order-details-piece1 .order-details-number .two,
.order-details-piece1 .order-details-time .two,
.order-details-piece1 .order-details-time .three {
  color: #262626;
}

.order-details-piece1 .order-details-time .three {
  margin-left: 26rpx;
}

.order-details-piece1 .order-details-query {
  border-top: 1rpx solid #eee;
  height: 64rpx;
  line-height: 64rpx;
  position: relative;
  padding: 24rpx 0;
}

.order-details-piece1 .order-details-query navigator {
  width: 169rpx;
  height: 64rpx;
  line-height: 64rpx;
  background: #fff;
  border-radius: 0;
  padding: 0;
  border: 1rpx solid rgba(215, 0, 41, 0.99);
  color: #d70029;
  font-size: 26rpx;
  position: absolute;
  right: 0;
  top: 24rpx;
  z-index: 1;
  text-align: center;
}

.order-details-piece1 view .two {
  margin-left: 32rpx;
  width: 520rpx;
  line-height: 34rpx;
}

.order-details-piece1 .order-details-state,
.order-details-piece1 .order-details-number,
.order-details-piece1 .order-details-time {
  margin-bottom: 24rpx;
}

.order-details-piece1 .order-details-time {
  margin-bottom: 30rpx;
}

.order-details-piece2 .content {
  padding: 0 30rpx;
}

.shop_set_pro {
  border-bottom: 1rpx solid #efefef;
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  height: 200rpx;
  box-sizing: border-box;
  background: #fff;
}

.shop_price {
  position: absolute;
  left: 0;
  bottom: 35rpx;
  font-size: 26rpx;
  color: #d71635;
  font-weight: bold;
}

.shop_price text {
  color: #d70029;
  font-size: 24rpx;
  display: inline-block;
  margin-left: 15rpx;
  font-weight: normal;
}

.shop_set_pro .shop_set_left {
  width: 150rpx;
  height: 150rpx;
  justify-content: center;
  align-items: center;
  display: flex;
  margin-top: 25rpx;
}

.shop_set_pro .shop_set_right {
  margin-left: 25rpx;
  width: 515rpx;
  position: relative;
}

.shop_set_right .shop_titi {
  color: #252525;
  font-size: 26rpx;
  line-height: 46rpx;
  white-space: normal;
  margin-top: 29rpx;
  display: block;
  text-align: left;
  word-break:break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.shop_set_right .shop_set_num {
  font-size: 26rpx;
  color: #999;
  position: absolute;
  right: 0;
  bottom: 35rpx;
}

.order-details-piece2 .total {
  display: block;
  text-align: right;
  font-size: 26rpx;
  color: #999;
  line-height: 86rpx;
  padding-right: 30rpx;
}

.order-details-piece3 {
  border-top: 15rpx solid #f4f4f4;
  border-bottom: 15rpx solid #f4f4f4;
  padding: 40rpx 30rpx;
}

.order-details-piece3 .one {
  font-size: 0;
}

.order-details-piece3 .one text {
  font-size: 26rpx;
  color: #252525;
  line-height: 26rpx;
  display: inline-block;
  vertical-align: middle;
}

.order-details-piece3 .one text:last-child {
  margin-left: 40rpx;
}

.order-details-piece3 .two {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-top: 16rpx;
  text-align: justify;
  line-height: 36rpx;
}

.order-details-piece4 {
  padding: 0 30rpx;
  border-bottom: 15rpx solid #f4f4f4;
}

.order-details-piece4 .total-price, .order-details-piece4 .freight {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  align-content: center;
  align-items: center;
  margin-top: 36rpx;
}

.order-details-piece4 .total-price text:first-child,
.order-details-piece4 .freight text:first-child,
.order-details-piece4 .pay text:first-child {
  font-size: 26rpx;
  color: #252525;
  line-height: 26rpx;
  display: block;
}

.order-details-piece4 .total-price text:last-child,
.order-details-piece4 .freight text:last-child,
.order-details-piece4 .pay text:last-child {
  font-size: 24rpx;
  color: #d70029;
  line-height: 24rpx;
  display: block;
}

.order-details-piece4 .pay {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  align-content: center;
  border-top: 1rpx solid #efefef;
  margin-top: 32rpx;
  padding: 26rpx 0;
}

.order-details-piece4 .pay text:last-child {
  font-size: 26rpx;
  line-height: 26rpx;
}
.order-details-piece3 .one text:first-child{
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.order-details-piece3 .one::after{
  content: '';
  display: block;
  clear: both;
}
.order-details-piece3 .one text{
  line-height: 36rpx;
  display: block;
  float: left;
}