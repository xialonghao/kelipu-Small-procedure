/* components/load-more/index.wxss */

.loadmore {
  height: 82rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
}

.loadmore text {
  font-weight: normal;
  display: block;
  font-size: 20rpx;
  color: #999;
  height: 82rpx;
  line-height: 82rpx;
  text-align: center;
  background: #fff;
}

.icon {
  width: 25rpx;
  height: 25rpx;
  margin-right: 10rpx;
}

.active {
  animation: weuiLoading 0.6s steps(12, end) infinite;
}

@keyframes weuiLoading {
  0% {
    transform: rotate3d(0, 0, 1, 0deg);
  }

  100% {
    transform: rotate3d(0, 0, 1, 360deg);
  }
}
